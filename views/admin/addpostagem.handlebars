{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}


<div class="card">
    <div class="card-body">
        <h1>Criar postagem</h1>
        <form action="/admin/postagens/nova" method="POST">
            <label class="mt-2"for="titulo">Titulo: </label>
            <input type="text" name="titulo" placeholder="Titulo da postagem" class="form-control" required>

            <label class="mt-2" for="slug">Slug: </label>
            <input type="text" name="slug" placeholder="Slug da postagem" class="form-control" required>

            <label class="mt-2" for="descricao">Descrição: </label>
            <input type="text" name="descricao" placeholder="Descrição da postagem" class="form-control" required>

            <label class="mt-2" for="conteudo">Conteúdo: </label>
            <textarea type="text" name="conteudo" placeholder="Conteúdo da postagem" class="form-control" required></textarea>

            <label class="mt-2" for="categoria">Categoria: </label>
            <select name="categoria" class="form-select" required>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

            <button class="btn btn-success mt-4" type="submit">Criar postagem</button>
        </form>
    </div>
</div>