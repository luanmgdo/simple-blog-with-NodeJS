<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success"> Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <h5>{{descricao}}</h5>
            <small>Data: {{data}}</small> <br>
            <small>Categoria: {{categoria.nome}}</small>
            <p>{{conteudo}}</p>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-primary mt-2">Editar</button></a>
            <form action="/admin/postagens/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h4>Nenhuma postagem registrad</h4>
{{/each}}